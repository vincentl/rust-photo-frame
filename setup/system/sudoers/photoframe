Defaults:frame !requiretty

Cmnd_Alias PHOTOF_SYSTEMCTL = \
    /bin/systemctl status cage@tty1.service, \
    /bin/systemctl restart cage@tty1.service, \
    /bin/systemctl start cage@tty1.service, \
    /bin/systemctl stop cage@tty1.service, \
    /bin/systemctl reload cage@tty1.service, \
    /bin/systemctl status photoframe-*.service, \
    /bin/systemctl status photoframe-*.timer, \
    /bin/systemctl start photoframe-*.service, \
    /bin/systemctl stop photoframe-*.service, \
    /bin/systemctl restart photoframe-*.service, \
    /bin/systemctl start photoframe-*.timer, \
    /bin/systemctl stop photoframe-*.timer, \
    /bin/systemctl restart photoframe-*.timer, \
    /bin/systemctl reload photoframe-*.service, \
    /bin/systemctl reload photoframe-*.timer

Cmnd_Alias PHOTOF_JOURNAL = \
    /bin/journalctl -u cage@tty1.service, \
    /bin/journalctl -u cage@tty1.service -b, \
    /bin/journalctl -u cage@tty1.service -b -f, \
    /bin/journalctl -u photoframe-*.service, \
    /bin/journalctl -u photoframe-*.service -b, \
    /bin/journalctl -u photoframe-*.service -b -f, \
    /bin/journalctl -u photoframe-*.timer, \
    /bin/journalctl -u photoframe-*.timer -b, \
    /bin/journalctl -u photoframe-*.timer -b -f

frame ALL=(root) NOPASSWD: PHOTOF_SYSTEMCTL, PHOTOF_JOURNAL
